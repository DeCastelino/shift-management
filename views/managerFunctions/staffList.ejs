<!-- This user facing page lists all the staff memebers on the database at http://localhost:3000/managerFunctions/staffList.
 Clicking on a staff member will redirect to a staff details page specific to that member.  -->
<html lang="en">
  <%- include("../partials/head.ejs") %> 
 
    <body>
      <h1>Staff List</h1>
      <h2>Here are all staff members currently regsitered with the system.</h2>

      <%- include("../partials/nav.ejs") %>  

      <div class="stafflist">

          <% if (staffProfiles.length > 0) { %>
           <% staffProfiles.forEach(staffProfile => { %>
          <a class="single" href="/managerFunctions/<%= staffProfile._id %>">
            <h3 class="fullName"> <%= staffProfile.firstName %> <%= staffProfile.lastName %> </h3>
            <!-- <h3 class="lastName"> <%= staffProfile.lastName %> </h3>
            <p class= "preferredName"><%= staffProfile.preferredName %> </p> -->
          </a>
            <% }) %>
          <% } else { %> 
             <p>No Staff Profiles to display</p> 
          <% } %> 

      </div>

      <%- include("../partials/footer.ejs") %> 

    </body>
    </html>