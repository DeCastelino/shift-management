<!-- This user facing page lists all the shifts on the database at http://localhost:3000/managerFunctions/shiftList.
 Clicking on a shift is meant to redirect to a shift 'update details' page, but this is not yet implemented.  -->

<html lang="en">
  <%- include("../partials/head.ejs") %> 
 
    <body>
      <h1>Shift List</h1>
      <h2>Here are all shifts currently regsitered with the system.</h2>

      <%- include("../partials/nav.ejs") %>  

      <div class="shiftlist">

          <% if (shifts.length > 0) { %>
           <% shifts.forEach(shift => { %>
          <a class="single" href="/shifts/<%= shift._id %>">
            <p class="date"> Date: <%= shift.date.getDate() %> <%= shift.date.getMonth() %> <%= shift.date.getFullYear() %></p>
            <p class="location"> Location: <%= shift.location %> </p>
            <p class="startTime"> Start Time: <%= shift.startTime %> </p>
            <p class="duration"> Duration: <%= shift.duration %> hrs </p>
            <p class= "staffMember">Assigned Staff Member: <%= shift.staffMember %> </p>
            <br>
          </a>
            <% }) %>
          <% } else { %> 
             <p>No Shifts to display</p> 
          <% } %> 

      </div>

      <%- include("../partials/footer.ejs") %> 

    </body>
    </html>