              <div class="card-header">
                <h5 class="title">Add Staff Profile</h5>
              </div>
              <form action="/managerFunctions" method="POST" onsubmit="successAlert()">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-5 pr-md-1">
                      <div class="form-group">
                        <label>Company (disabled)</label>
                        <input type="text" class="form-control" disabled="" placeholder="Company" value="XYZ Company">
                      </div>
                    </div>
                    <div class="col-md-3 px-md-1">
                      <div class="form-group">
                        <label for="preferredName">Preferred Name*</label>
                        <input type="text" id="preferredName" name="preferredName" class="form-control" required>
                      </div>
                    </div>
                    <div class="col-md-4 pl-md-1">
                      <div class="form-group">
                        <label for="email">Email*</label>
                        <input type="text" id="email" name="email" class="form-control" required>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 pr-md-1">
                      <div class="form-group">
                        <label for="firstName">First Name*</label>
                        <input type="text" id="firstName" name="firstName" class="form-control" required>
                      </div>
                    </div>
                    <div class="col-md-6 pl-md-1">
                      <div class="form-group">
                        <label for="lastName">Last Name*</label>
                        <input type="text" id="lastName" name="lastName" class="form-control" required>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="address">Address*</label>
                        <input type="text" id="address" name="address" class="form-control" required>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 pr-md-1">
                      <div class="form-group">
                        <label for="phoneNumber">Phone Number*</label>
                        <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" required>
                      </div>
                    </div>
                    <div class="col-md-6 px-md-1">
                      <div class="form-group">
                        <label for="workLimit">Work Limit</label>
                        <input type="number" id="workLimit" name="workLimit" class="form-control">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-fill btn-primary">Update</button>
              </form>
